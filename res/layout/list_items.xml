<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listItem" 
    android:layout_width="fill_parent"
    android:layout_height="72dp"
    android:background="@drawable/item_bg"    
    android:descendantFocusability="blocksDescendants">
	<TextView
    	android:id="@+id/item_sign"
    	android:layout_height="fill_parent"
    	android:layout_width="8dp"
    	android:layout_alignParentLeft="true"
    	android:background="@drawable/item_sign" />
	<TextView
    	android:id="@+id/item_title"
    	android:layout_toRightOf="@id/item_sign"
    	android:layout_marginLeft="12dp"
    	android:layout_marginTop="6dp"
    	android:layout_height="wrap_content"    
    	android:layout_width="wrap_content"
    	android:textColor="@color/black"
    	android:textSize="20sp" />
	<TextView
    	android:id="@+id/item_time"
    	android:layout_toRightOf="@id/item_sign"
    	android:layout_below="@id/item_title"
    	android:layout_marginLeft="12dp"
    	android:layout_marginTop="2dp"
    	android:layout_height="wrap_content"    
    	android:layout_width="wrap_content"
    	android:textColor="@color/black_subhead"
    	android:textSize="14sp" />
	<TextView
    	android:id="@+id/item_date"
    	android:layout_toRightOf="@id/item_sign"
    	android:layout_below="@id/item_time"
    	android:layout_marginLeft="12dp"
    	android:layout_height="wrap_content"    
    	android:layout_width="wrap_content"
    	android:textColor="@color/black_subhead"
    	android:textSize="12sp" />
    <ImageView
        android:id="@+id/edit_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/content_edit"
        android:scaleType="center"
        android:focusable="false"
        />
</RelativeLayout>